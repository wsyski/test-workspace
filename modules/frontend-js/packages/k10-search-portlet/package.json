{
  "name": "k10-search-portlet",
  "version": "1.0.0",
  "description": "Arena K10 Search Portlet",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20",
    "yarn": "1.x"
  },
  "dependencies": {
    "@arena/lib-portlet-common": "*",
    "@arena/portal": "*",
    "@liferay/portal-7.4": "*"
  },
  "devDependencies": {
    "@arena/lib-liferay-mock": "*",
    "@arena/lib-portlet-test": "*"
  },
  "scripts": {
    "scss": "sass --load-path=node_modules/@clayui/css/src/scss ./assets/css/styles.scss ./assets/css/styles.css",
    "build": "cross-env NODE_ENV=production babel --source-maps -d build src && run-s scss copy-assets && cross-env NODE_ENV=production liferay build",
    "copy-assets": "cpx \"./assets/**\" build",
    "clean": "liferay clean",
    "deploy": "gulp deploy",
    "publish": "gulp publish",
    "start": "run-s copy-assets && react-scripts start",
    "test": "jest --verbose"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.axiell-arena",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "com.liferay.portlet.css-class-wrapper": "k10-search-portlet",
    "javax.portlet.name": "k10_search_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "main": "main.js",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
