{
  "extends": "../../tsconfig.declarations.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "jest.config.js",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/setupTests.ts",
    "node_modules",
    "dist"
  ]
}
