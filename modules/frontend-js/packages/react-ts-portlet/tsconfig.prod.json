{
    "extends": "../../tsconfig.declarations.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir":  "out-tsc",
        "target": "es5"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/__tests__/**/*",
        "src/**/__mocks__/**/*",
        "src/setupTests.ts",
        "node_modules"
    ]
}
