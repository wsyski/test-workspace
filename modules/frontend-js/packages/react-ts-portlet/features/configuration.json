{
  "$schema": "https://raw.githubusercontent.com/liferay/liferay-frontend-projects/master/maintenance/projects/js-toolkit/resources/schemas/configuration.schema.json",
  "system": {
    "category": "sample",
    "name": "react-ts-portlet",
    "fields": {
      "fruit": {
        "default": "orange",
        "description": "fruit-help",
        "name": "fruit",
        "options": {
          "apple": "an-apple",
          "orange": "an-orange",
          "pear": "a-pear"
        },
        "required": false,
        "type": "string"
      }
    }
  },
  "portletInstance": {
    "fields": {
      "customTranslation": {
        "type": "string",
        "name": "customTranslation.label"
      },
      "drink": {
        "default": "water",
        "description": "drink-help",
        "name": "drink",
        "options": {
          "coffee": "coffee",
          "tea": "tea",
          "water": "water"
        },
        "required": false,
        "type": "string"
      },
      "booleanTrue": {
        "type": "boolean",
        "name": "booleanTrue.label",
        "default": "true"
      },
      "booleanFalse": {
        "type": "boolean",
        "name": "booleanFalse.label",
        "default": "false"
      }
    }
  }
}
