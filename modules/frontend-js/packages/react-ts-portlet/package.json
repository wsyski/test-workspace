{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React Portlet Typescript",
  "license": "UNLICENSED",
  "main": "index.js",
  "dependencies": {
    "@arena/lib-portlet-common": "file:../../arena-lib-portlet-common-v5.4.0.tgz",
    "@liferay/portal-7.4": "*",
    "@arena/portal": "1.0.0"
  },
  "devDependencies": {
    "react-scripts": "^5.0.1",
    "@testing-library/jest-dom": "~5.16.4",
    "@testing-library/react": "~12.1.5",
    "@testing-library/user-event": "~12.8.3",
    "@types/enzyme": "~3.10.12",
    "@types/enzyme-adapter-react-16": "~1.0.6",
    "@types/node": "^16.11.27",
    "@types/react-test-renderer": "~16.9.3",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.14",
    "@types/react-redux": "7.1.25",
    "@types/react-router": "5.1.18",
    "@types/react-router-dom": "5.3.3",
    "@types/jest": "~27.5.1",
    "@types/warning": "~3.0.0",
    "enzyme": "~3.11.0",
    "enzyme-adapter-react-16": "~1.15.6",
    "enzyme-to-json": "~3.6.1",
    "event-source-polyfill": "~1.0.25",
    "jest": "~27.5.1",
    "jest-environment-jsdom": "~27.5.1",
    "microbundle-crl": "~0.13.11",
    "react-test-renderer": "16.12.0",
    "ts-jest": "~26.5.6",
    "typescript": "~4.1.6"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.sample",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "javax.portlet.name": "react_ts_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "scripts": {
    "scss": "gulp scss",
    "scss:watch": "gulp scss:watch",
    "build:dev": "run-s tsc && babel --source-maps -d build out-tsc && run-s scss copy-assets && liferay-npm-bundler",
    "build": "run-s tsc && cross-env NODE_ENV=production babel --source-maps -d build out-tsc && run-s scss copy-assets && cross-env NODE_ENV=production liferay-npm-bundler",
    "copy-assets": "cpx \"./assets/**\" build",
    "clean": "rimraf out-tsc && liferay clean",
    "deploy": "liferay deploy",
    "deploy:prod": "cross-env NODE_ENV=production liferay deploy",
    "start": "react-scripts start",
    "tsc": "tsc -b tsconfig.prod.json",
    "babel": "babel --source-maps -d build out-tsc",
    "liferay-npm-bundler": "liferay-npm-bundler",
    "build:new": "liferay build",
    "publish": "true",
    "test": "true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
