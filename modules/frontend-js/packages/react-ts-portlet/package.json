{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React Portlet Typescript",
  "license": "UNLICENSED",
  "main": "index.js",
  "dependencies": {
    "@arena/lib-portlet-common": "1.0.0",
    "@liferay/portal-7.4": "*",
    "@arena/portal": "1.0.0"
  },
  "devDependencies": {
    "react-scripts": "^5.0.1"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.sample",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "javax.portlet.name": "react_ts_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "scripts": {
    "scss": "gulp scss",
    "scss:watch": "gulp scss:watch",
    "build": "run-s tsc && cross-env NODE_ENV=development babel --source-maps -d build out-tsc && run-s scss copy-assets && cross-env NODE_ENV=development liferay-npm-bundler",
    "build:prod": "run-s tsc && cross-env NODE_ENV=production babel --source-maps -d build out-tsc && run-s scss copy-assets && cross-env NODE_ENV=production liferay-npm-bundler",
    "copy-assets": "cpx \"./assets/**\" build",
    "clean": "rimraf out-tsc && liferay clean",
    "deploy": "liferay deploy",
    "deploy:prod": "cross-env NODE_ENV=production liferay deploy",
    "start": "react-scripts start",
    "tsc": "tsc -b tsconfig.prod.json",
    "babel": "babel --source-maps -d build out-tsc",
    "liferay-npm-bundler": "liferay-npm-bundler",
    "build:new": "liferay build",
    "publish": "true",
    "test": "true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
