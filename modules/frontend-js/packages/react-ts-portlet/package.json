{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React Portlet Typescript",
  "license": "UNLICENSED",
  "main": "index.js",
  "dependencies": {
    "@arena/lib-portlet-common": "file:../../arena-lib-portlet-common-v5.4.0.tgz",
