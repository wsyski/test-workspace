{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React Portlet Typescript",
  "license": "UNLICENSED",
  "main": "index.js",
  "dependencies": {
    "@arena/lib-portlet-common": "1.0.0",
    "@liferay/portal-7.4": "*",
    "@arena/portal": "1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "react-scripts": "^5.0.1",
    "child_process": "^1.0.2",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "cpr": "^3.0.1",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "@babel/cli": "~7.21.0",
    "@babel/core": "~7.21.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "~7.18.6",
    "@babel/runtime": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "fs": "^0.0.1-security",
    "properties-reader": "^2.2.0"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.sample",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "javax.portlet.name": "react_ts_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "scripts": {
    "scss": "gulp scss",
    "scss:watch": "gulp scss:watch",
    "build": "run-s tsc && cross-env NODE_ENV=development babel --source-maps -d build out-tsc && run-s scss copy-assets && cross-env NODE_ENV=development liferay build",
    "build:prod": "run-s tsc && cross-env NODE_ENV=production babel --source-maps -d build out-tsc && run-s scss copy-assets && cross-env NODE_ENV=production liferay build",
    "copy-assets": "cpx \"./assets/**\" build",
    "clean": "liferay clean",
    "deploy": "liferay deploy",
    "deploy:prod": "cross-env NODE_ENV=production liferay deploy",
    "start": "react-scripts start",
    "tsc": "tsc -b tsconfig.prod.json",
    "publish": "true",
    "test": "true"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
